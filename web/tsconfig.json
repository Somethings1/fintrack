{
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"]
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "references": [
        { "path": "./tsconfig.app.json" },
        { "path": "./tsconfig.node.json" }
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "bundler"
    },
    "include": [
        "./src",
        "./env.d.ts"
    ]
}
